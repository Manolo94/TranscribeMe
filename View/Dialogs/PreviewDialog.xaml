<ui:ContentDialog
    x:Class="TranscribeMe.View.Dialogs.PreviewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:TranscribeMe.Resources"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
    xmlns:wmp="clr-namespace:AxWMPLib;assembly=AxInterop.WMPLib"
    Title="PreviewDialog"
    IsShadowEnabled="False"
    ui:ControlHelper.CornerRadius="20"
    SnapsToDevicePixels="True"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <wfi:WindowsFormsHost x:Name="host">
            <wmp:AxWindowsMediaPlayer
                x:Name="player"
                Width="500"
                Height="340"
                Dock="Fill" />
        </wfi:WindowsFormsHost>

        <Button
            Grid.Row="1"
            Margin="10"
            FocusVisualStyle="{x:Null}"
            Click="Button_Click"
            HorizontalAlignment="Right"
            Content="{x:Static res:Lang.Close}" />
    </Grid>
</ui:ContentDialog>
