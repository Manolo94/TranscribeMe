<Window
    x:Class="TranscribeMe.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:TranscribeMe.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fonts="clr-namespace:Fonts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Transcribed"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    SnapsToDevicePixels="True"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Content="{x:Static fonts:IconFont.Volcano}" 
               FontFamily="{StaticResource Material}" />

        <ListBox Margin="10" BorderThickness="0">

            <custom:NavButton
                Padding="6"
                Icon="fdwldpew"/>

        </ListBox>

        <Frame Grid.Column="1" Background="#2C104C" />
    </Grid>
</Window>
