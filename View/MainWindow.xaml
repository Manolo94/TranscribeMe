<Window
    x:Class="TranscribeMe.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:TranscribeMe.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fonts="clr-namespace:Fonts"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Transcribed"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    SnapsToDevicePixels="True"
    WindowStyle="ThreeDBorderWindow"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Content="{x:Static fonts:IconFont.HeadphonesSettings}" FontFamily="{StaticResource mat}" FontSize="33"/>

        <ListBox Margin="5" BorderThickness="0">

            <custom:NavButton FontFamily="{StaticResource mat}" Icon="{x:Static fonts:IconFont.Abacus}" />

        </ListBox>

        <Frame Grid.Column="1" Background="#410093" />
    </Grid>
</Window>
